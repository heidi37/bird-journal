<%- include('partials/header') -%>
<form class="centered-form" action="/entries/editEntry/<%= entry._id %>?_method=PUT" method="POST">
  <h2 class="mb-4">edit entry</h2>
  <div class="formRow">
    <label for="date" class="form-label">Date</label><br>
    <input type="date" class="form-control" name="date" id="date" value="<%= entry.date %>">
  </div>
  <div class="formRow">
    <label for="commonName" class="form-label">Common Name</label><br>
    <input type="text" class="form-control" name="commonName" value="<%= entry.commonName %>" id="commonName">
  </div>
  <div class="formRow">
    <label for="latinName" class="form-label">Latin Name</label><br>
    <input type="text" class="form-control" name="latinName" value="<%= entry.latinName %>" id="latinName">
  </div>
  <div class="formRow">
    <label for="observations" class="form-label">Observations</label><br>
    <textarea id="observations" class="form-control" name="observations" rows="10"><%= entry.observations %></textarea>
  </div>
  <div class="formRow">
    <label for="funFact" class="form-label">Fun Facts</label><br>
    <textarea id="funFact" class="form-control" name="funFact" placeholder="A fun thing about this bird..." rows="10"><%= entry.funFact %></textarea>
  </div>
  <!-- <div class="formRow">
    <label for="image" class="form-label">Image</label><br>
    <input type="file" class="form-control" name="file" id="image">
  </div> -->
  <div class="formRow">
    <label for="reference" class="form-label">Reference URL</label><br>
    <input type="url" class="form-control" name="reference" id="reference" value="<%= entry.reference %>">
  </div>
  <input type="submit" class="btn btn-primary mt-2">
</form>
<!-- <script src="/js/entryForm.js"></script> -->
<%- include('partials/footer') -%>