<%- include('partials/header') -%>
<form
  class="centered-form"
  id="entryForm"
  action="/entries/addEntry"
  enctype="multipart/form-data"
  method="POST"
>
  <h2 class="mb-4">add entry</h2>
  <div class="row">
    <div class="col-md-6">
      <div class="formRow">
        <label for="date" class="form-label">Date</label><br />
        <input type="date" class="form-control" name="date" id="date" />
      </div>
      <div class="formRow">
        <label for="image" class="form-label">Image</label><br />
        <img id="imagePreview" src="" alt="Preview" />
        <input
          type="file"
          class="form-control"
          name="file"
          id="image"
          required
        />
        <button id="aiButton" class="btn btn-outline-primary">
          Get AI Suggestions
        </button>
        <div class="mb-5"><small id="aiText">Use the suggestions provided by AI for "Common Name", "Latin Name" and "Fun Facts" or add your own. Sometimes the AI is incorrect. Please verify AI results before posting.</small></div>
      </div>
      <div id="suggestions" class="formRow"></div>
      <div class="formRow">
        <label for="commonName" class="form-label">Common Name</label><br />
        <input
          type="text"
          class="form-control"
          name="commonName"
          placeholder="American Robin"
          id="commonName"
          required
        />
      </div>
      <div class="formRow">
        <label for="latinName" class="form-label">Latin Name</label><br />
        <input
          type="text"
          class="form-control"
          name="latinName"
          placeholder="Turdus migratorius"
          id="latinName"
        />
      </div>
    </div>
    <div class="col-md-6">
      <div class="formRow">
        <label for="observations" class="form-label">Observations</label><br />
        <textarea
          id="observations"
          class="form-control"
          name="observations"
          placeholder="This is what I saw..."
          rows="10"
        ></textarea>
      </div>
      <div class="formRow">
        <label for="funFact" class="form-label">Fun Facts</label><br />
        <textarea
          id="funFact"
          class="form-control"
          name="funFact"
          placeholder="A fun thing about this bird..."
          rows="10"
        ></textarea>
      </div>
    </div>
    <div class="formRow">
      <label for="reference" class="form-label">Reference URL</label><br />
      <small
        >If you have a link to more information about the bird you may enter it
        here, otherwise a link to the
        <a href="https://www.allaboutbirds.org/">All About Birds</a> website
        will be auto-generated.</small
      >
      <input type="url" class="form-control" name="reference" id="reference" />
    </div>
    <div class="formRow">
      <input type="submit" class="btn btn-primary mt-2 w-auto" />
    </div>
  </div>
</form>
<script src="../js/entryForm.js"></script>
<%- include('partials/footer') -%>
